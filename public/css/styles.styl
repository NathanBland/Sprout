.pie-wrapper {
  
  size = 200px;

  display: inline-block;
  height: size;
  margin: 10px;
  position: relative;
  width: size;
  
  .pie {
    clip: rect(0, size, size, (size / 2));
    height: size;
    position: absolute;
    width: size;
  
    .half-circle {
      border: (size / 10) solid #e67e22;
      border-radius: 50%;
      clip: rect(0, (size / 2), size, 0);
      height: size;
      position: absolute;
      width: size;
    }
  }
  
  .label {
    background: #34495e;
    border-radius: 50%;
    color: #ecf0f1;
    cursor: default;
    display: block;
    font-size: 3em;
    height: size - (size * .2);
    left: 10%;
    line-height: 3em;
    position: absolute;
    text-align: center;
    top: 10%;
    width: size - (size * .2);
    
    .smaller {
      color: #bdc3c7;
      font-size: .45em;
      padding-bottom: 20px;
      vertical-align: super;
    }
  }
  
  &.style-2 {
    .shadow {
      border: (size / 10) solid #bdc3c7;
      border-radius: 50%;
      height: 100%;
      width: 100%;
    }
    
    .label {
      background: none;
      color: #7f8c8d;
    
      .smaller {
        color: #bdc3c7;
      }
    }
  }
}

progress-states = 0...101
for p in progress-states
  .progress-{p}
    .pie
      .left-side
        transform: rotate((p * 3.6)deg)

      if p > 50
        clip: rect(auto, auto, auto, auto)
        .right-side
          transform: rotate(180deg)

// Customize the border color based on progress:
progress-color(hue)
  for p in progress-states
    .progress-{p}
      .pie
        .half-circle
          border-color: tint(hue, (100 - p))

