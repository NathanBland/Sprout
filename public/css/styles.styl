// Utilities
prefix(property, value)
  for vendor in 'webkit' 'moz' 'o'
    -{vendor}-{property} value
  {property} value

transform()
  prefix 'transform' arguments

*,
*:before,
*:after {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
